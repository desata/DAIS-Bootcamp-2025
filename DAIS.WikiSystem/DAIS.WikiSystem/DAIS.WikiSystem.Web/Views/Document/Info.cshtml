@using DAIS.WikiSystem.Web.Models.ViewModels.Document
@model DocumentViewModel

@{
    ViewData["Title"] = "Document Info";
}

<div class="container mt-4">
    <h2>@Model.Title</h2>
    <dl class="row">
        <dt class="col-sm-3">Access Level</dt>
        <dd class="col-sm-9">@Model.AccessLevel</dd>

        <dt class="col-sm-3">Tags</dt>
        <dd class="col-sm-9">@string.Join(", ", Model.Tags)</dd>

        <dt class="col-sm-3">Creator</dt>
        <dd class="col-sm-9">@Model.CreatorFirstName @Model.CreatorLastName</dd>

        <dt class="col-sm-3">Category</dt>
        <dd class="col-sm-9">@Model.CategoryName</dd>

        <dt class="col-sm-3">File Path</dt>
        <dd class="col-sm-9">@Model.FilePath</dd>

        <dt class="col-sm-3">Version</dt>
        <dd class="col-sm-9">@Model.Version</dd> 
        
        <dt class="col-sm-3">Create Date</dt>
        <dd class="col-sm-9">@Model.CreateDate</dd>

    </dl>

    <a href="@Url.Action("Index", "Document")" class="btn btn-secondary">Back to list</a>
</div>