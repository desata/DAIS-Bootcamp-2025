@{
    ViewData["Title"] = "Home Page";
}

<div class="container py-4">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title mb-0">My Documents</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Title</th>
                                    <th>CategoryName</th>
                                    <th>CreatorLastName</th>
                                    <th>AccessLevel</th>
                                    <th>Tags</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var document in Model.Documents)
                                {
                                    <tr>
                                        <td>@document.Title</td>
                                        <td>@document.CategoryName</td>
                                        <td>@document.CreatorLastName</td>
                                        <td>@document.AccessLevel.ToString()</td>
                                        <td>@string.Join(", ", document.Tags)</td>
                                        <td>
                                            <button class="btn btn-sm btn-outline-primary"
                                                    onclick="location.href='@Url.Action("Info", "Document", new {id = document.DocumentId})'">
                                                View More
                                            </button>

                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>