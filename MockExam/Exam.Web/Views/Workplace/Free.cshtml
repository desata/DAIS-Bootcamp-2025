@using Exam.Web.Models.ViewModels
@model WorkplaceListViewModel

@{
    ViewData["Title"] = "Free Workplaces";
}

<h2>Free Workplaces (@Model.TotalCount)</h2>

<form method="get" asp-action="Free" asp-controller="Workplace">
    <div class="form-check form-check-inline">
        <input type="checkbox" class="form-check-input" name="FilterHasMonitor" value="true" @(Model.FilterHasMonitor ? "checked" : "") />
        <label class="form-check-label">Monitor</label>
    </div>
    <div class="form-check form-check-inline">
        <input type="checkbox" class="form-check-input" name="FilterHasDockingStation" value="true" @(Model.FilterHasDockingStation ? "checked" : "") />
        <label class="form-check-label">Docking Station</label>
    </div>
    <div class="form-check form-check-inline">
        <input type="checkbox" class="form-check-input" name="FilterHasWindow" value="true" @(Model.FilterHasWindow ? "checked" : "") />
        <label class="form-check-label">Window</label>
    </div>
    <div class="form-check form-check-inline">
        <input type="checkbox" class="form-check-input" name="FilterHasPrinter" value="true" @(Model.FilterHasPrinter ? "checked" : "") />
        <label class="form-check-label">Printer</label>
    </div>

    <button type="submit" class="btn btn-outline-primary btn-sm ms-2">Apply Filters</button>
</form>

<br />

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Location</th>
            <th>Monitor</th>
            <th>Docking Station</th>
            <th>Window</th>
            <th>Printer</th>
            <th>Available</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var workplace in Model.Workplaces)
        {
            <tr>
                <td>@workplace.Location</td>
                <td><input type="checkbox" disabled @(workplace.HasMonitor ? "checked" : "") /></td>
                <td><input type="checkbox" disabled @(workplace.HasDockingStation ? "checked" : "") /></td>
                <td><input type="checkbox" disabled @(workplace.HasWindow ? "checked" : "") /></td>
                <td><input type="checkbox" disabled @(workplace.HasPrinter ? "checked" : "") /></td>
                <td>
                    @if (workplace.IsAvailable)
                    {
                        <span class="text-success">Yes</span>
                    }
                    else
                    {
                        <span class="text-danger">No</span>
                    }
                </td>
                <td>
                    @if (workplace.IsAvailable)
                    {
                        <form asp-action="Reserve" asp-controller="Workplace" method="post">
                            <input type="hidden" name="workplaceId" value="@workplace.WorkplaceId" />
                            <button type="submit" class="btn btn-primary btn-sm">Reserve</button>
                        </form>
                    }
                    else
                    {
                        <button class="btn btn-secondary btn-sm" disabled>Unavailable</button>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>